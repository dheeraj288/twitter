<% if user_signed_in? %>
  <% if (current_user != user) && (!current_user.following.include?(user)) %>
    <%= following_path(user) %>
  <% elsif (current_user.following.include?(user)) %>
    <%= link_to "Unfollow", following_path(user.username), class: "btn btn-danger btn-lg m-3", method: :delete %>
  <% end %>
<% end %>
